<Window x:Class="DatHammer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatHammer"
        mc:Ignorable="d"
        Title="DatHammer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Text="AC Directory: " FontSize="16" Margin="20,20,140,0" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="0,0,0,0" Width="Auto" Height="22" />
        <TextBox Grid.Column="1" x:Name="ACPath" HorizontalAlignment="Right" VerticalAlignment="Top" Width="140" Height="22" FontSize="12" Margin="5,20,0,0" />
        <Button Grid.Column="2" x:Name="PathDialog" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="22" Margin="5, 20, 20, 0" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="PathDialog_Click" Content=". . ." FontWeight="Bold" FontSize="11"/>
        <Border Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="DarkGray" BorderThickness="2" Height="auto" Width="auto" Margin="10, 300, 10, 10">
            <ScrollViewer x:Name="ScrollViewerConsole" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="OutputConsole" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto" FontSize="14" Margin="0, 0, 0, 0" Text="" Padding="5, 3, 5, 5" Cursor="IBeam" FontFamily="Segoe UI Variable Text" TextWrapping="Wrap" Background="WhiteSmoke" />
            </ScrollViewer>
        </Border>
        <!--Button x:Name="TestButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="22" Margin="20,60,20,20" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="TestButton_Click"/-->
        
        <TextBlock Grid.Column="0" Text="Add Title" FontSize="18" Margin="20,15,20,20" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" Width="Auto" Height="22" FontFamily="Palatino Linotype" FontWeight="Bold" />
        <Button x:Name="AddTitleButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="22" Margin="20,40,20,20" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="AddTitleButton_Click" Content="Add" FontSize="14"/>
        <TextBox Grid.Column="0" x:Name="AddTitleInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="22" FontSize="12" Margin="90,40,20,20" />
        
        <TextBlock Grid.Column="0" Text="Replace Spell" FontSize="18" Margin="20,65,20,20" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" Width="Auto" Height="22" FontFamily="Palatino Linotype" FontWeight="Bold" />
        <Button x:Name="ReplaceSpellButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="22" Margin="20,90,20,20" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="ReplaceSpellButton_Click" Content="Replace" FontSize="14"/>
        <TextBox Grid.Column="0" TextChanged="SpellNameInput_Changed" x:Name="ReplaceSpellNameInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="22" FontSize="12" Margin="165,90,20,20" Panel.ZIndex="1" Background="{x:Null}" />
        <TextBox Grid.Column="0" TextChanged="SpellDescInput_Changed" Grid.ColumnSpan="2" x:Name="ReplaceSpellDescInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="22" FontSize="12" Margin="20,115,20,20" Panel.ZIndex="1" Background="{x:Null}" />
        <TextBox Grid.Column="0" TextChanged="SpellNumInput_Changed" x:Name="ReplaceSpellNumInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="22" FontSize="12" Margin="100,90,20,20" Panel.ZIndex="1" Background="{x:Null}" />
        <TextBlock x:Name="SpellIDPlaceholder" Grid.Column="0" Text="ID" FontSize="12" Margin="100,90,20,20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,3,0,0" Width="60" Height="22" Foreground="#FF595959" Background="White" />
        <TextBlock x:Name="SpellNamePlaceholder" Grid.Column="0" Text="Name" FontSize="12" Margin="165,90,20,20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,3,0,0" Width="105" Height="22" Foreground="#FF595959" Background="White" />
        <TextBlock x:Name="SpellDescPlaceholder" Grid.Column="0" Text="Description" FontSize="12" Margin="20,115,20,20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,3,0,0" Width="250" Height="22" Foreground="#FF595959" Background="White" />
        
        <TextBlock Grid.Column="0" Text="Add Image" FontSize="18" Margin="20,140,20,20" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0" Width="Auto" Height="22" FontFamily="Palatino Linotype" FontWeight="Bold" />
        <Button x:Name="AddImageButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="22" Margin="20,165,20,20" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="AddImageButton_Click" Content="Add" FontSize="14"/>
        <TextBlock x:Name="ImagePathPlaceholder" Grid.Column="0" Text="Image Path" FontSize="12" Margin="90,165,0,0" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,3,0,0" Width="145" Height="22" Foreground="#FF595959" Background="White" />
        <TextBox Grid.Column="0" TextChanged="ImgPathInput_Changed" x:Name="ImgPath" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="22" FontSize="12" Margin="90,165,0,0" Background="{x:Null}" />
        <Button Grid.Column="0" Grid.ColumnSpan="2" x:Name="ImgPathDialog" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="22" Margin="240,165,20,0" Background="#FFE3E3E3" BorderBrush="#FF222222" Foreground="Black" Click="ImgPathDialog_Click" Content=". . ." FontWeight="Bold" FontSize="11"/>
        <TextBlock x:Name="ImageIDPlaceholder" Grid.Column="0" Text="ID (6 chars)" FontSize="12" Margin="20,190,0,0" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,3,0,0" Width="95" Height="22" Foreground="#FF595959" Background="White" />
        <TextBox Grid.Column="0" TextChanged="ImgIDInput_Changed" x:Name="ImgID" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Height="22" FontSize="12" Margin="20,190,0,0" Background="{x:Null}" />
        <ComboBox x:Name="dropdownImageResize" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="22" Margin="205,190,0,0">
            <ComboBoxItem Tag="ResizeTrue" Content="True (Resize Image)" IsSelected="True" FontSize="12" />
            <ComboBoxItem Tag="ResizeFalse" Content="False (Resize Image)" FontSize="12" />
        </ComboBox>
        <ComboBox x:Name="dropdownImageType" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="22" Margin="120,190,0,0">
            <ComboBoxItem Tag="PFID_A8B8G8R8" Content="ABGR" IsSelected="True" FontSize="12" />
            <ComboBoxItem Tag="PFID_A8R8G8B8" Content="ARGB" FontSize="12" />
            <ComboBoxItem Tag="PFID_CUSTOM_RAW_JPEG" Content="JPG" FontSize="12" />
            <ComboBoxItem Tag="PFID_INDEX16" Content="INDEX16" FontSize="12" />
            <ComboBoxItem Tag="PFID_R8G8B8" Content="RGB" FontSize="12" />
            <ComboBoxItem Tag="PFID_DXT1" Content="DXT1" FontSize="12" />
            <ComboBoxItem Tag="PFID_DXT2" Content="DXT2" FontSize="12" />
            <ComboBoxItem Tag="PFID_DXT3" Content="DXT3" FontSize="12" />
            <ComboBoxItem Tag="PFID_DXT4" Content="DXT4" FontSize="12" />
            <ComboBoxItem Tag="PFID_DXT5" Content="DXT5" FontSize="12" />
        </ComboBox>
    </Grid>
</Window>
